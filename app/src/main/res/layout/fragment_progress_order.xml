<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".ProgressOrderFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtProgressOrderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textviewborder"
                android:padding="3dp"
                android:text="@string/hello_blank_fragment" />

            <TableLayout
                android:id="@+id/tblProgrssOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtTableProductName"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/textviewborder"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Номенклатура" />

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:background="@drawable/textviewborder"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="В единицах хранения" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtTableOrded"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textviewborder"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="Заказано"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtTableExecuted"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textviewborder"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="Выполнено"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtLeft"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textviewborder"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="Осталось"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Мест" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtTableOrded2"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/textviewborder"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="Заказано"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtTableExecuted2"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/textviewborder"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="Выполнено"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/txtLeft2"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/textviewborder"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="Осталось"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>
