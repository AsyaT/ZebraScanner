<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtview_lv_header_stringnumber"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:background="#EDF7C9"
        android:padding="5dp"
        android:text="№" />

    <TextView
        android:id="@+id/txtview_lv_header_nomenclature"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#EDF7C9"
        android:padding="5dp"
        android:text="Номенклатура" />

    <TextView
        android:id="@+id/txtview_lv_header_weight"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="#EDF7C9"
        android:padding="5dp"
        android:text="Вес" />

    <TextView
        android:id="@+id/txtview_lv_header_quantity"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:background="#EDF7C9"
        android:padding="5dp"
        android:text="К." />
</LinearLayout>