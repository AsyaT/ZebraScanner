<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dip"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frBarcodeInfo"
        android:layout_width="290dp"
        android:layout_height="392dp"
        android:layout_gravity="top"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:elevation="12dp"
        android:background="#00FCFAFA"></FrameLayout>

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="178dp"
        android:layout_height="46dp"
        android:layout_below="@+id/textViewStatusTitle"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textViewStatusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="135dp"
        android:layout_marginRight="135dp"
        android:text="Статус сканнера:" />

    <include
        android:id="@+id/layoutTable"
        layout="@layout/content_order_table"
        android:layout_width="371dp"
        android:layout_height="384dp"
        android:layout_below="@+id/btnRenoveAll"
        android:layout_alignStart="@+id/btnRemoveOne"
        android:layout_marginTop="85dp" />

    <Button
        android:id="@+id/btnRemoveOne"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="Удалить строку" />

    <Button
        android:id="@+id/btnRenoveAll"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/btnRemoveOne"
        android:layout_toRightOf="@+id/btnRemoveOne"
        android:text="Удалить всё" />

    <Button
        android:id="@+id/ShowRowBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="76dp"
        android:layout_toEndOf="@+id/textViewStatus"
        android:layout_toRightOf="@+id/textViewStatus"
        android:text="Button" />

    <Button
        android:id="@+id/btnBarcodeInfo"
        android:layout_width="119dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/btnRenoveAll"
        android:layout_toRightOf="@+id/btnRenoveAll"
        android:text="Штрихкод" />
</RelativeLayout>