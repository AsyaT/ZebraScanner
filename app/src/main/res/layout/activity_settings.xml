<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <EditText
        android:id="@+id/editTxt1CPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:ems="10"
        android:inputType="numberPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTxt1CUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Имя пользователя"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="236dp" />

    <TextView
        android:id="@+id/txtAccountAreaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбор участка учёта:"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="36dp" />

    <TextView
        android:id="@+id/txt1CDBConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Детали подключения к базе 1С"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="162dp" />

    <TextView
        android:id="@+id/txt1CPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пароль"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="309dp" />

    <Button
        android:id="@+id/btnSaveSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="428dp" />

    <Spinner
        android:id="@+id/snrSelectionAccountArea"
        android:layout_width="221dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="73dp" />

    <TextView
        android:id="@+id/txt1CUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя пользователя"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="203dp" />
</android.support.constraint.ConstraintLayout>